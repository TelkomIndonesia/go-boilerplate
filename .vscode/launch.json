    "version": "0.2.0",
    "configurations": [
        {
            "name": "run and debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd",
            "substitutePath": [
                {
                    "from": "${workspaceFolder}",
                    "to": "${workspaceFolder}"
                }
            ],
            "host": "127.0.0.1",
            "port": 2345,
            "trace": "verbose",
            "showLog": true,
            "buildFlags": [
                "-buildvcs=false"
            ]
        }
    ]
}